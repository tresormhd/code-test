
<% include header %>
    
  <!-- Default form register -->
<form action="/" method="POST" class="text-center border border-light p-5">
    <p class="h4 mb-4">inscription</p>

    <div class="form-row mb-4">
        <div class="col">
            <!-- First name -->
            <input type="text"  id="firstName" name="nom" class="form-control" placeholder="First name">
        </div>
        <div class="col">
            <!-- Last name -->
            <input type="text" required id="lastName"name="prenom" class="form-control" placeholder="Last name">
        </div>
    </div>

    <!-- E-mail -->
    <input type="email" required id="email"name="email" class="form-control mb-4" placeholder="E-mail">

    <!-- Password -->
    <input type="password" required id="password" name="password" class="form-control" placeholder="Password" aria-describedby="HelpBlock">
    <small id="HelpBlock" class="form-text text-muted mb-4">
        At least 8 characters and 1 digit
    </small>

    <!-- Phone number -->
    <input type="text" id="phone" name="telephone" class="form-control" placeholder="Phone number" aria-describedby="Optional">
    <small id="Optional" class="form-text text-muted mb-4">
        Optional - for two step authentication
    </small>

    <!-- Newsletter -->
    <div class="custom-control custom-checkbox">
        <input type="checkbox" class="custom-control-input" id="defaultRegisterFormNewsletter">
        <label class="custom-control-label" for="defaultRegisterFormNewsletter">Subscribe to our newsletter</label>
    </div>

    <!-- Sign up button -->
    <button class="btn btn-info my-2  btn-block " type="submit">inscription</button>

    <p>vous avez un compte ? connecter-vous </p><a href="login.ejs" class="btn btn-success my-4 ">connexion</a>

    <!-- Social register -->
    <p>or sign up with:</p>

    <a type="button" class="light-blue-text mx-2">
        <i class="fab fa-facebook-f"></i>
    </a>
    <a type="button" class="light-blue-text mx-2" href="www.twitter.com">
        <i class="fab fa-twitter" ></i>
    </a>
    <a type="button" class="light-blue-text mx-2"href="www.linkedin-in.com">
        <i class="fab fa-linkedin-in" ></i>
    </a>
    <a type="button" class="light-blue-text mx-2" href="www.github.com">
        <i class="fab fa-github" ></i>
    </a>

    <hr>

    <!-- Terms of service -->
    <p>By clicking
        <em>Sign up</em> you agree to our
        <a href="" target="_blank">terms of service</a>
    </p>

</form>
